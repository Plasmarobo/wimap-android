<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.wimap.wimap.MainActivity"
    style="@android:style/Theme.Holo.NoActionBar">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/letters" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/login_email"
            android:background="@color/White"
            android:hint="@string/email_hint"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/Black" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_password"
            android:background="@color/White"
            android:hint="@string/password_hint"
            android:layout_below="@+id/login_email"
            android:layout_alignLeft="@+id/login_email"
            android:layout_alignStart="@+id/login_email"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/Black"
            android:password="true" />

        <Button
            android:layout_width="256dp"
            android:layout_height="96dp"
            android:text="@string/login_hint"
            android:id="@+id/login_submit"
            android:layout_below="@+id/login_password"
            android:layout_marginTop="25dp"
            android:layout_alignLeft="@+id/login_password"
            android:layout_alignStart="@+id/login_password"
            android:layout_alignRight="@+id/login_password"
            android:layout_alignEnd="@+id/login_password"
            android:layout_gravity="center_horizontal"
            android:textSize="32dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textStyle="bold"
            android:textColor="@color/BrightGreen"
            android:background="@color/Green" />

    </LinearLayout>

</RelativeLayout>
