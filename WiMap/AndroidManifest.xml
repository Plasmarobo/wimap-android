<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.witech.wimap"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET"/>
	<meta-data android:name="com.google.android.gms.version"
           android:value="@integer/google_play_services_version" />
	<meta-data 
	    android:name="com.google.android.maps.v2.AIzaSyAEEZMUvttKvW9NEaKFO-F2Ng7LR_SsAoE"
	    android:value="API_KEY" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:description="@string/AppDesc" android:logo="@drawable/ic_launcher">
        <service android:name=".WiMapService" />
        <activity
            android:name="com.witech.wimap.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.witech.wimap.MapActivity"
            android:label="@string/map_name"
            >          
        </activity>
        <activity 
            android:name="com.witech.wimap.DistanceActivity"
            android:label="@string/distance_name"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.witech.wimap.BeaconActivity"
            android:label="@string/beacon_name"
          	android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.witech.wimap.CalibrateActivity"
            android:label="@string/calibrate_name"
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name="com.witech.wimap.SelectRouterActivity"
            android:label="@string/selectrouter_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.witech.wimap.EditRouterActivity"
            android:label="@string/editrouter_name"
            android:screenOrientation="portrait">         
        </activity>
        <activity
            android:name="com.witech.wimap.FetchRouterActivity"
            android:label="@string/fetchrouter_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.witech.wimap.PushRouterActivity"
            android:label="@string/pushrouter_name"
            android:screenOrientation="portrait">
        </activity>
        
    </application>

</manifest>
